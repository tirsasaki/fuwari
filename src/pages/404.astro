---
import MainGridLayout from '@layouts/MainGridLayout.astro';
import { Icon } from 'astro-icon/components';

const title = "404: Page Not Found";
const description = "Oops! The page you're looking for doesn't exist.";
---

<MainGridLayout title={title} description={description}>
    <div class="flex flex-col items-center justify-center min-h-[60vh] px-4 text-center">
        <div class="space-y-8">
            {/* Error Code and Icon */}
            <div class="relative">
                {/* Large 404 Background */}
                <h1 class="text-[12rem] font-bold tracking-wider opacity-10 dark:opacity-20
                           bg-gradient-to-r from-[oklch(0.5_0.14_var(--hue))] to-[oklch(0.6_0.14_var(--hue))] 
                           dark:from-[oklch(0.7_0.14_var(--hue))] dark:to-[oklch(0.8_0.14_var(--hue))]
                           bg-clip-text text-transparent">
                    404
                </h1>
                
                {/* Centered Icon */}
                <div class="absolute inset-0 flex items-center justify-center">
                    <Icon 
                        name="material-symbols:sentiment-very-dissatisfied-outline-rounded" 
                        class="w-32 h-32 text-[oklch(0.6_0.14_var(--hue))] dark:text-[oklch(0.8_0.14_var(--hue))]"
                    />
                </div>
            </div>

            {/* Error Message */}
            <div class="space-y-4">
                <h2 class="text-3xl font-bold 
                           text-[oklch(0.4_0.14_var(--hue))] dark:text-[oklch(0.85_0.14_var(--hue))]">
                    Page Not Found
                </h2>
                <p class="text-lg text-gray-600 dark:text-gray-300">
                    The page you're looking for doesn't exist or has been moved.
                </p>
            </div>

            {/* Back to Home Button */}
            <div class="pt-8">
                <a 
                    href="/" 
                    class="inline-flex items-center px-6 py-3 space-x-3 text-base font-medium transition-all rounded-lg
                           bg-[oklch(0.97_0.014_var(--hue))] dark:bg-[oklch(0.3_0.014_var(--hue))]
                           text-[oklch(0.4_0.14_var(--hue))] dark:text-[oklch(0.9_0.14_var(--hue))]
                           hover:bg-[oklch(0.94_0.014_var(--hue))] dark:hover:bg-[oklch(0.35_0.014_var(--hue))]
                           hover:scale-105 active:scale-95"
                >
                    <Icon name="material-symbols:home-outline-rounded" class="w-5 h-5" />
                    <span>Back to Home</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Optional: Add copyright footer -->
    <div class="absolute bottom-8 left-0 right-0 text-center text-sm text-gray-500 dark:text-gray-400">
        Â© 2025 Neta Lynx. All Rights Reserved. / <a href="/rss" class="hover:text-[oklch(0.5_0.14_var(--hue))] dark:hover:text-[oklch(0.7_0.14_var(--hue))]">RSS</a>
    </div>
</MainGridLayout>